{
  "compilerOptions": {

    "target": "es2021",
    "lib": [
      "es2021"
    ],

    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": [
      "@cloudflare/workers-types"
    ],

    "allowJs": true,
    "checkJs": true,

    "noEmit": true,

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
  }
}
